<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<TextView
    android:paddingStart="@dimen/start"
    android:id="@+id/solution_number"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="1"
    android:textSize="30dp"
    android:fontFamily="@font/extra_bold"
    android:textColor="@color/black"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/imgWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            >

            <ImageView

                android:id="@+id/iamge"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/oran" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/start"
            android:layout_toRightOf="@+id/imgWrapper"
            android:fontFamily="@font/extra_bold"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/start"
            android:layout_toRightOf="@+id/name"
            android:fontFamily="@font/medium"
            android:gravity="end"
            android:text="@string/categories"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </RelativeLayout>
</LinearLayout>